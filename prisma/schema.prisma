generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  password      String        @default("")
  role          Role          @default(USER)
  letterboxdUrl String?
  createdAt     DateTime      @default(now())
  movieViews    MovieView[]
  nominations   Nomination[]
}

model Movie {
  id         Int           @id @default(autoincrement())
  tmdbId     Int           @unique
  title      String
  year       Int?
  posterPath String?
  overview   String?
  pool       MoviePool     @default(CLASSIC)
  createdAt  DateTime      @default(now())
  movieViews   MovieView[]
  credits      MovieCredit[]
  nominations  Nomination[]
}

model MovieView {
  id        Int      @id @default(autoincrement())
  movieId   Int
  userId    Int
  hasSeen   Boolean  @default(true)
  createdAt DateTime @default(now())
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([movieId, userId])
}

enum MoviePool {
  NEW_RELEASE
  CLASSIC
}

enum CategoryType {
  FILM
  ACTOR
  DIRECTOR
}

model Category {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  type        CategoryType
  pool        MoviePool    @default(NEW_RELEASE)
  createdAt   DateTime     @default(now())
  nominations Nomination[]
}

enum CreditRole {
  ACTOR
  DIRECTOR
}

model Person {
  id           Int           @id @default(autoincrement())
  tmdbId       Int           @unique
  name         String
  photoPath    String?
  createdAt    DateTime      @default(now())
  movieCredits MovieCredit[]
}

model MovieCredit {
  id        Int        @id @default(autoincrement())
  movieId   Int
  personId  Int
  role      CreditRole
  character String?
  order     Int?
  movie       Movie        @relation(fields: [movieId], references: [id], onDelete: Cascade)
  person      Person       @relation(fields: [personId], references: [id], onDelete: Cascade)
  nominations Nomination[]

  @@unique([movieId, personId, role])
}

model Nomination {
  id            Int          @id @default(autoincrement())
  userId        Int
  categoryId    Int
  movieId       Int?
  movieCreditId Int?
  rank          Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user          User         @relation(fields: [userId], references: [id])
  category      Category     @relation(fields: [categoryId], references: [id])
  movie         Movie?       @relation(fields: [movieId], references: [id])
  movieCredit   MovieCredit? @relation(fields: [movieCreditId], references: [id])

  @@unique([userId, categoryId, rank])
}
